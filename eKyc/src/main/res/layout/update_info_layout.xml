            android:layout_margin="@dimen/_16sdp"
            android:textColor="@color/colorButtonText"
            android:text="@string/update"
            android:textSize="@dimen/_11sdp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"/>

